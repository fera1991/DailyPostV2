# Build stage
FROM openjdk:17-jdk AS build

WORKDIR /app

COPY build.gradle settings.gradle ./
COPY gradle/ gradle/

RUN ./gradlew build

COPY src ./src

RUN ./gradlew build

# Run stage
FROM openjdk:17-jdk AS final

WORKDIR /app

COPY --from=build /app/build/libs/DailyPost-0.0.1-SNAPSHOT.jar ./app.jar

EXPOSE 8080

CMD ["java", "-jar", "app.jar"]
